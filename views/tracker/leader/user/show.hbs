{{#> layouts/base }}

    {{#*inline "content-block"}}

        <div class="container">
            <div class="card col-12">
                <div class="card-header">
                    <div class="card-title">
                        Spieler: {{thisUser.name}}
                        <a href="/leader/users" class="btn btn-outline-light float-end"><i class="fa fa-arrow-left"></i></a>
                    </div>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            <label for="factionId">Fraktion</label>
                            <select class="form-select" id="factionId" name="factionId" required>
                                <option value="-1" {{#unless thisUser.factionId}}selected{{/unless}}>keine Fraktion</option>
                                {{#each factions}}
                                    <option value="{{this.id}}" {{#if (eq ../thisUser.factionId this.id)}}selected{{/if}}>{{this.name}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <br>
                        <div class="form-group">
                            <label for="roleId">Rang</label>
                            <select class="form-select" id="roleId" name="roleId" required>
                                <option value="-1" {{#unless thisUser.roleId}}selected{{/unless}}>keinen Rang</option>
                                {{#each roles}}
                                    <option value="{{this.id}}" {{#if (eq ../thisUser.roleId this.id)}}selected{{/if}}>{{this.name}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <br>
                        <div class="form-group">
                            <label for="isGettingPayed">Auszahlung</label>
                            <select class="form-select" id="isGettingPayed" name="isGettingPayed" required>
                                <option value="0" {{#unless thisUser.isGettingPayed}}selected{{/unless}}>Deaktiviert</option>
                                <option value="1" {{#if thisUser.isGettingPayed}}selected{{/if}}>Aktiviert</option>
                            </select>
                        </div>
                        <br>
                        <div class="form-group">
                            <label for="isInstructor">Ausbilder</label>
                            <select class="form-select" id="isInstructor" name="isInstructor" required>
                                <option value="0" {{#unless thisUser.isInstructor}}selected{{/unless}}>Deaktiviert</option>
                                <option value="1" {{#if thisUser.isInstructor}}selected{{/if}}>Aktiviert</option>
                            </select>
                        </div>
                        <br>
                        <div class="form-group">
                            <label for="inputName">Name</label>
                            <input type="text" class="form-control" id="inputName" placeholder="" name="name" value="{{thisUser.name}}" required>
                        </div>
                        <br>
                        <div class="form-group">
                            <label for="inputTime">Forum ID</label>
                            <input type="number" min="0" class="form-control" id="inputTime" placeholder="" name="forumId" value="{{thisUser.forumId}}" required>
                        </div>
                        <br>
                        <button type="submit" class="btn btn-primary">Speichern</button>
                    </form>
                </div>
            </div>
        </div>

    {{/inline}}

{{/layouts/base}}
