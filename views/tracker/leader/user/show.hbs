{{#> layouts/base }}

    {{#*inline "content-block"}}

        <div class="container">
            <div class="card col-12">
                <div class="card-header">
                    <div class="card-title">
                        Spieler: {{thisUser.name}}
                        <a href="/leader/users" class="btn btn-outline-light float-end"><i class="fa fa-arrow-left"></i></a>
                    </div>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            <label for="selectionRole">Rang</label>
                            <select class="form-select" id="selectionRole" name="roleId" required>
                                <option value="-1" {{#unless thisUser.roleId}}selected{{/unless}}>keinen Rang</option>
                                {{#each roles}}
                                    <option value="{{this.id}}" {{#if (eq ../thisUser.roleId this.id)}}selected{{/if}}>{{this.name}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <br>
                        <div class="form-group">
                            <label for="inputTime">Forum ID</label>
                            <input type="number" min="0" class="form-control" id="inputTime" placeholder="" name="forumId" value="{{thisUser.forumId}}" required>
                        </div>
                        <br>
                        <button type="submit" class="btn btn-primary">Speichern</button>
                    </form>
                </div>
            </div>
        </div>

    {{/inline}}

{{/layouts/base}}
