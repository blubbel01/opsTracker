{{#> layouts/base }}

    {{#*inline "content-block"}}

        <div class="container">
            <div class="card col-12">
                <div class="card-header">
                    <div class="card-title">
                        Aktionstyp bearbeiten {{thisOpType.name}}
                        <a href="/leader/operationTypes" class="btn btn-outline-light float-end"><i class="fa fa-arrow-left"></i></a>
                    </div>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            <label for="inputName">Name</label>
                            <input type="text" class="form-control" id="inputName" placeholder="" name="name" value="{{thisOpType.name}}" required>
                        </div>
                        <br>
                        <div class="form-group">
                            <label for="countType">Berechnung (A: TypenWert, B: AktionsWert, G: Gehalt)</label>
                            <select class="form-select" id="countType" name="countType" required autofocus>
                                <option {{#if (eq thisOpType.countType 2)}}selected{{/if}} value="2">G = A * B</option>
                                <option {{#if (eq thisOpType.countType 1)}}selected{{/if}} value="1">G = A</option>
                                <option {{#if (eq thisOpType.countType 0)}}selected{{/if}} value="0">G = B</option>
                            </select>
                        </div>
                        <br>
                        <div class="form-group">
                            <label for="value">TypenWert (Geld)</label>
                            <input type="number" min="0" step="1" class="form-control" id=value" placeholder="100" name="value" value="{{thisOpType.value}}" required>
                        </div>
                        <br>
                        <div class="form-group">
                            <label for="needValidCheck">Benötigt Bestätigung durch Leader</label>
                            <select class="form-select" id="needValidCheck" name="needValidCheck" required>
                                <option {{#if (eq thisOpType.needValidCheck 1)}}selected{{/if}} value="1">Ja</option>
                                <option {{#if (eq thisOpType.needValidCheck 0)}}selected{{/if}} value="0">Nein</option>
                            </select>
                        </div>
                        <br>
                        <div class="form-group">
                            <label for="timeOnDashboard">Dashboard Anzeigedauer in Stunden (0: aus)</label>
                            <input type="number" min="0" step=".1" value="{{thisOpType.timeOnDashboard}}" class="form-control" id=timeOnDashboard" placeholder="100" name="timeOnDashboard" required>
                        </div>
                        <br>
                        <button type="submit" class="btn btn-primary">Speichern</button>
                    </form>
                </div>
            </div>
        </div>

    {{/inline}}

{{/layouts/base}}
