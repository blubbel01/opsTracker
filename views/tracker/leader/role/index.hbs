{{#> layouts/base }}

    {{#*inline "content-block"}}

        <div class="container">
            <div class="card col-12">
                <div class="card-header">
                    Rangliste
                    <a href="/leader/roles/create" class="btn btn-outline-success float-end"><i class="fa fa-plus"></i></a>
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Name</th>
                            <th scope="col">Ingame Rang Nummer</th>
                            <th scope="col"></th>
                        </tr>
                        </thead>
                        <tbody>

                        {{#each roles}}
                            <tr>
                                <td>{{this.id}}</td>
                                <td>{{this.name}}</td>
                                <td>{{this.permissionLevel}}</td>
                                <td>
                                    <a href="/leader/roles/{{this.id}}" class="btn btn-outline-dark"><i class="fa fa-edit"></i></a>
                                    <a href="/leader/roles/{{this.id}}/delete" class="btn btn-outline-danger"><i class="fa fa-times"></i></a>
                                </td>
                            </tr>
                        {{/each}}

                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    {{/inline}}

{{/layouts/base}}
