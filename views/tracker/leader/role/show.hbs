{{#> layouts/base }}

    {{#*inline "content-block"}}

        <div class="container">
            <div class="card col-12">
                <div class="card-header">
                    <div class="card-title">
                        Rang bearbeiten {{thisRole.name}}
                        <a href="/leader/roles" class="btn btn-outline-light float-end"><i class="fa fa-arrow-left"></i></a>
                    </div>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            <label for="inputName">Name</label>
                            <input type="text" class="form-control" id="inputName" placeholder="" name="name" value="{{thisRole.name}}" required>
                        </div>
                        <br>
                        <div class="form-group">
                            <label for="inputPermission">Ingame Rang Nummer</label>
                            <input type="number" min="0" max="5" step="0.1" class="form-control" id="inputPermission" placeholder="Rang5 = 5, Rang3.1 = 3.1, ..." name="permissionLevel" value="{{thisRole.permissionLevel}}" required>
                        </div>
                        <br>
                        <button type="submit" class="btn btn-primary">Speichern</button>
                    </form>
                </div>
            </div>
        </div>

    {{/inline}}

{{/layouts/base}}
